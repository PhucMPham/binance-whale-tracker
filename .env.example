# Binance Whale Tracker Configuration
# Copy this file to .env and fill in your API keys

# ============================================
# BINANCE API CONFIGURATION
# ============================================
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# Required for: Authenticated endpoints, higher rate limits
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Optional: Use testnet for testing (https://testnet.binance.vision)
BINANCE_TESTNET=false

# ============================================
# CRYPTOQUANT API CONFIGURATION
# ============================================
# Get your API key from: https://cryptoquant.com/pricing
# Required for: Exchange flow data, whale tracking
CRYPTOQUANT_API_KEY=

# ============================================
# TELEGRAM CONFIGURATION
# ============================================
# Create a bot: https://t.me/BotFather
# Get chat ID: https://t.me/userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ENABLED=true

# ============================================
# MONITORING SETTINGS
# ============================================
# Default monitoring interval (ms)
MONITORING_INTERVAL=300000

# Whale thresholds
WHALE_THRESHOLD_BTC=50
WHALE_THRESHOLD_ETH=1000

# Critical flow thresholds
CRITICAL_INFLOW_BTC=200
CRITICAL_OUTFLOW_BTC=500
CRITICAL_INFLOW_ETH=5000
CRITICAL_OUTFLOW_ETH=10000

# ============================================
# ALERT SETTINGS
# ============================================
# Maximum number of active alerts
MAX_ALERTS=100

# Alert cooldown period (ms)
ALERT_COOLDOWN=3600000

# Price change threshold for automatic alerts (%)
PRICE_ALERT_THRESHOLD=5

# ============================================
# DASHBOARD SETTINGS
# ============================================
# Dashboard update interval (ms)
DASHBOARD_UPDATE_INTERVAL=5000

# Maximum symbols to display
DASHBOARD_MAX_SYMBOLS=10

# Enable/disable dashboard features
DASHBOARD_SHOW_WHALE=true
DASHBOARD_SHOW_TECHNICAL=true
DASHBOARD_SHOW_FLOWS=true

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Log file location (leave empty to disable file logging)
LOG_FILE=

# Pretty print logs (for development)
LOG_PRETTY=true

# ============================================
# ADVANCED SETTINGS
# ============================================
# API request timeout (ms)
API_TIMEOUT=10000

# Maximum retry attempts for failed requests
MAX_RETRIES=3

# Rate limiting (requests per minute)
RATE_LIMIT=1200

# Cache TTL (seconds)
CACHE_TTL=60

# Database URL (optional, for persistent storage)
DATABASE_URL=

# Redis URL (optional, for caching)
REDIS_URL=

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable specific features
FEATURE_TECHNICAL_ANALYSIS=true
FEATURE_EXCHANGE_FLOWS=true
FEATURE_WHALE_TRACKING=true
FEATURE_PRICE_ALERTS=true
FEATURE_TELEGRAM=true
FEATURE_DASHBOARD=true

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Node environment
NODE_ENV=production

# Debug mode
DEBUG=false

# Mock data for testing
USE_MOCK_DATA=false